{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://haunted-agents.dev/schemas/manifest.schema.json",
  "title": "Bundle Manifest",
  "description": "Schema for Haunted Agents bundle manifest files",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "description",
    "longDescription",
    "author",
    "tags",
    "categories",
    "components",
    "createdAt",
    "updatedAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 3,
      "maxLength": 50,
      "description": "Unique identifier in kebab-case format"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Human-readable display name"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Short description for card display"
    },
    "longDescription": {
      "type": "string",
      "minLength": 20,
      "maxLength": 2000,
      "description": "Detailed description for detail page"
    },
    "author": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 30
      },
      "minItems": 1,
      "maxItems": 20,
      "uniqueItems": true,
      "description": "Search tags for discovery"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 2,
        "maxLength": 50
      },
      "minItems": 1,
      "maxItems": 10,
      "uniqueItems": true,
      "description": "Category classifications"
    },
    "previewImage": {
      "type": "string",
      "description": "URL or path to preview image"
    },
    "components": {
      "type": "object",
      "properties": {
        "mcpServers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "command", "args"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "command": {
                "type": "string",
                "minLength": 1
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "steeringFiles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["filename", "inclusion"],
            "properties": {
              "filename": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[^/\\\\:*?\"<>|]+\\.md$"
              },
              "inclusion": {
                "type": "string",
                "enum": ["always", "manual", "fileMatch"]
              },
              "fileMatchPattern": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false,
            "if": {
              "properties": {
                "inclusion": {
                  "const": "fileMatch"
                }
              }
            },
            "then": {
              "required": ["fileMatchPattern"]
            }
          }
        },
        "hooks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "trigger", "action", "content"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "trigger": {
                "type": "string",
                "minLength": 1
              },
              "action": {
                "type": "string",
                "enum": ["message", "command"]
              },
              "content": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "specTemplates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "filename"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "type": {
                "type": "string",
                "enum": ["requirements", "design", "tasks"]
              },
              "filename": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[^/\\\\:*?\"<>|]+\\.md$"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "external": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "kiroVersion": {
          "type": "string",
          "pattern": "^(>=|>|<=|<|=)?\\d+\\.\\d+\\.\\d+$"
        }
      },
      "additionalProperties": false
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "description"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
          },
          "prompt": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    }
  },
  "additionalProperties": false
}
