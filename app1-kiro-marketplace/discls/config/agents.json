{
  "version": "1.0.0",
  "featured": ["react-supabase-expert", "api-wizard"],
  "bundles": [
    {
      "id": "react-supabase-expert",
      "name": "React + Supabase Expert",
      "version": "1.0.0",
      "description": "Expert agent for building React apps with Supabase backend",
      "longDescription": "This agent bundle provides comprehensive support for building modern React applications with Supabase as the backend. It includes MCP servers for Supabase integration, steering files with best practices, and hooks for automated testing.",
      "author": {
        "name": "Haunted Agents Team",
        "email": "team@haunted-agents.dev"
      },
      "tags": ["React", "Supabase", "Frontend", "Database"],
      "categories": ["frontend", "backend"],
      "previewImage": "/images/react-supabase.svg",
      "components": {
        "mcpServers": [
          {
            "name": "supabase-mcp",
            "command": "uvx",
            "args": ["supabase-mcp-server"]
          }
        ],
        "steeringFiles": [
          {
            "filename": "react-best-practices.md",
            "inclusion": "always"
          },
          {
            "filename": "supabase-patterns.md",
            "inclusion": "fileMatch",
            "fileMatchPattern": "*.tsx"
          }
        ],
        "hooks": [
          {
            "name": "test-on-save",
            "trigger": "onSave",
            "action": "command",
            "content": "npm test"
          }
        ],
        "specTemplates": [
          {
            "name": "react-component-spec",
            "type": "design",
            "filename": "react-component-template.md"
          }
        ]
      },
      "examples": [
        {
          "title": "Create a new component",
          "description": "Generate a React component with TypeScript",
          "prompt": "Create a UserProfile component with Supabase integration"
        }
      ],
      "createdAt": "2025-11-20T10:00:00Z",
      "updatedAt": "2025-11-24T15:30:00Z"
    },
    {
      "id": "api-wizard",
      "name": "API Documentation Wizard",
      "version": "1.2.0",
      "description": "Automatically generate and maintain API documentation",
      "longDescription": "This agent specializes in creating comprehensive API documentation. It analyzes your code, generates OpenAPI specs, and maintains up-to-date documentation as your API evolves.",
      "author": {
        "name": "Haunted Agents Team"
      },
      "tags": ["API", "Documentation", "OpenAPI", "REST"],
      "categories": ["backend"],
      "previewImage": "/images/api-wizard.svg",
      "components": {
        "mcpServers": [
          {
            "name": "openapi-mcp",
            "command": "node",
            "args": ["openapi-server.js"]
          }
        ],
        "steeringFiles": [
          {
            "filename": "api-documentation-guide.md",
            "inclusion": "always"
          }
        ],
        "specTemplates": [
          {
            "name": "api-endpoint-spec",
            "type": "requirements",
            "filename": "api-endpoint-template.md"
          }
        ]
      },
      "examples": [
        {
          "title": "Document an endpoint",
          "description": "Generate OpenAPI documentation for a REST endpoint",
          "prompt": "Document the /users endpoint with all CRUD operations"
        }
      ],
      "createdAt": "2025-11-15T08:00:00Z",
      "updatedAt": "2025-11-23T12:00:00Z"
    },
    {
      "id": "test-coach",
      "name": "Test-Driven Development Coach",
      "version": "2.0.1",
      "description": "Guide you through TDD practices with automated test generation",
      "longDescription": "Master test-driven development with this comprehensive agent bundle. It provides guidance on writing tests first, generates test templates, and includes hooks for continuous testing.",
      "author": {
        "name": "Haunted Agents Team",
        "url": "https://haunted-agents.dev"
      },
      "tags": ["Testing", "TDD", "Unit Tests", "Integration Tests"],
      "categories": ["testing"],
      "previewImage": "/images/test-coach.svg",
      "components": {
        "steeringFiles": [
          {
            "filename": "tdd-best-practices.md",
            "inclusion": "always"
          },
          {
            "filename": "test-patterns.md",
            "inclusion": "manual"
          }
        ],
        "hooks": [
          {
            "name": "run-tests-on-save",
            "trigger": "onSave",
            "action": "command",
            "content": "npm test -- --run"
          },
          {
            "name": "coverage-check",
            "trigger": "onCommit",
            "action": "command",
            "content": "npm run test:coverage"
          }
        ],
        "specTemplates": [
          {
            "name": "test-spec-template",
            "type": "design",
            "filename": "test-driven-spec.md"
          }
        ]
      },
      "examples": [
        {
          "title": "Write tests first",
          "description": "Generate test cases before implementation",
          "prompt": "Create tests for a user authentication service"
        }
      ],
      "createdAt": "2025-11-10T14:00:00Z",
      "updatedAt": "2025-11-25T09:00:00Z"
    }
  ]
}
